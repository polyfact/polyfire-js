{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021",
            "DOM",
        ],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": "lib/",
        "rootDir": "lib/"
    },
    "include": ["lib/**/*"],
}
